---
// const academyUrl = "https://minacademy.datumint.no";
const academyUrl = "/academy";
---

<a
  href={academyUrl}
  style="
    position: fixed;
    right: 1rem;
    bottom: 1rem;
    z-index: 9999;

    background-color: var(--bg-card);
    border: 1px solid var(--border-default);
    box-shadow: 0 12px 30px rgba(0,0,0,0.6);

    border-radius: var(--radius-xl);
    padding: .75rem 1rem;
    min-width: 200px;

    font-size: .8rem;
    line-height: 1.4;
    color: var(--text-main);
    text-decoration: none;
    display: flex;
    flex-direction: column;
    row-gap: .4rem;
  "
>
  <div style="display:flex;align-items:center;justify-content:space-between;flex-wrap:wrap; row-gap:.25rem;">
    <span style="font-weight:600; color:var(--text-main);">
      DatumInt Academy
    </span>
    <span
      class="badge yellow"
      style="font-size:.7rem;line-height:1.2;font-weight:600;color:#2a211b;"
    >
      New
    </span>
  </div>

  <div style="color:var(--text-muted); font-size:.7rem; line-height:1.4;">
    Focused training in Semantic Data Engineering, FAIR data & GenAI with context.
  </div>

  <div
    style="
      background: var(--gradient-primary);
      color: var(--text-main);
      text-align:center;
      font-weight:600;
      font-size:.75rem;
      border-radius:999px;
      padding:.4rem .6rem;
      line-height:1.2;
    "
  >
    Visit minacademy.datumint.no â†’
  </div>
</a>
