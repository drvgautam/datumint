---
// DatumInt Logo Component - Sharp Pentagon Design
// Clean, geometric pentagon with 5 nodes and connecting edges
// Sharp vector graphics for maximum clarity
---

<svg
  class="datumint-logo"
  viewBox="0 0 220 50"
  xmlns="http://www.w3.org/2000/svg"
  aria-label="DatumInt - Semantic Data Engineering"
>
  <defs>
    <!-- Text glow (very subtle) -->
    <filter id="textGlow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="0.5" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Pentagon Icon - Sharp and Clear -->
  <g class="icon" transform="translate(5, 5)">
    <!-- Pentagon nodes and edges -->
    <!-- Top node (teal/cyan) -->
    <circle
      cx="20"
      cy="8"
      r="4"
      fill="var(--accent-primary)"
      class="node node-top"
    />
    
    <!-- Top-left node (purple) -->
    <circle
      cx="8"
      cy="18"
      r="4"
      fill="var(--accent-secondary)"
      class="node node-top-left"
    />
    
    <!-- Top-right node (orange/amber) -->
    <circle
      cx="32"
      cy="18"
      r="4"
      fill="var(--accent-tertiary)"
      class="node node-top-right"
    />
    
    <!-- Bottom-left node (teal/cyan) -->
    <circle
      cx="12"
      cy="30"
      r="4"
      fill="var(--accent-primary)"
      class="node node-bottom-left"
    />
    
    <!-- Bottom-right node (purple) -->
    <circle
      cx="28"
      cy="30"
      r="4"
      fill="var(--accent-secondary)"
      class="node node-bottom-right"
    />
    
    <!-- Connecting edges (sharp lines) -->
    <!-- Top to Top-left (teal) -->
    <line
      x1="20"
      y1="12"
      x2="8"
      y2="18"
      stroke="var(--accent-primary)"
      stroke-width="2.5"
      stroke-linecap="round"
      class="edge edge-1"
    />
    
    <!-- Top to Top-right (teal) -->
    <line
      x1="20"
      y1="12"
      x2="32"
      y2="18"
      stroke="var(--accent-primary)"
      stroke-width="2.5"
      stroke-linecap="round"
      class="edge edge-2"
    />
    
    <!-- Top-left to Bottom-left (purple) -->
    <line
      x1="8"
      y1="18"
      x2="12"
      y2="30"
      stroke="var(--accent-secondary)"
      stroke-width="2.5"
      stroke-linecap="round"
      class="edge edge-3"
    />
    
    <!-- Top-right to Bottom-right (orange) -->
    <line
      x1="32"
      y1="18"
      x2="28"
      y2="30"
      stroke="var(--accent-tertiary)"
      stroke-width="2.5"
      stroke-linecap="round"
      class="edge edge-4"
    />
    
    <!-- Bottom-left to Bottom-right (teal) -->
    <line
      x1="12"
      y1="30"
      x2="28"
      y2="30"
      stroke="var(--accent-primary)"
      stroke-width="2.5"
      stroke-linecap="round"
      class="edge edge-5"
    />
  </g>
  
  <!-- "DatumInt" Wordmark -->
  <g class="wordmark">
    <text
      x="55"
      y="30"
      font-family="var(--font-sans)"
      font-size="24"
      font-weight="700"
      fill="var(--text-main)"
      letter-spacing="0.03em"
      class="wordmark-text"
    >
      DatumInt
    </text>
  </g>
</svg>

<style>
  .datumint-logo {
    display: block;
    height: 2.5rem;
    width: auto;
    shape-rendering: geometricPrecision;
    text-rendering: optimizeLegibility;
  }
  
  /* Sharp rendering for all elements */
  .icon {
    shape-rendering: geometricPrecision;
  }
  
  .node {
    shape-rendering: geometricPrecision;
    transition: opacity 0.2s ease;
  }
  
  .edge {
    shape-rendering: geometricPrecision;
    transition: opacity 0.2s ease;
  }
  
  /* Simple hover effect */
  .datumint-logo:hover {
    opacity: 0.9;
  }
  
  .datumint-logo:hover .node {
    opacity: 0.9;
  }
  
  .datumint-logo:hover .edge {
    opacity: 0.9;
  }
  
  .datumint-logo:hover .wordmark-text {
    fill: var(--accent-primary);
  }
  
  /* Wordmark */
  .wordmark-text {
    transition: fill 0.2s ease;
  }
  
  /* Responsive sizing */
  @media (max-width: 768px) {
    .datumint-logo {
      height: 2rem;
    }
    
    .wordmark {
      display: none; /* Hide wordmark on mobile, show only icon */
    }
  }
  
  @media (max-width: 480px) {
    .datumint-logo {
      height: 1.75rem;
    }
  }
</style>
