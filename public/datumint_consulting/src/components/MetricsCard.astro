---
interface Props {
  number: string;
  label: string;
  icon?: string;
}

const { number, label, icon } = Astro.props;
---

<div class="metrics-card">
  {icon && (
    <div class="metrics-icon" aria-hidden="true">
      {icon}
    </div>
  )}
  <div class="metrics-number">{number}</div>
  <div class="metrics-label">{label}</div>
</div>

<style>
  .metrics-card {
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-subtle);
    padding: 1.5rem;
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .metrics-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
  }

  .metrics-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    opacity: 0.8;
  }

  .metrics-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .metrics-label {
    font-size: 0.9rem;
    color: var(--text-dim);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .metrics-number {
      font-size: 2rem;
    }
  }
</style>

