---
interface Props {
  org: string;
  title: string;
  desc: string;
  tags?: string[];
  metrics?: { label: string; value: string }[];
  link?: string;
}

const { org, title, desc, tags = [], metrics, link } = Astro.props;
---

<div class="project-card">
  <div class="project-org">{org}</div>
  <h3 class="project-title">{title}</h3>
  <p class="project-desc">{desc}</p>
  
  {metrics && metrics.length > 0 && (
    <div class="project-metrics">
      {metrics.map((metric) => (
        <div class="metric-item">
          <span class="metric-value">{metric.value}</span>
          <span class="metric-label">{metric.label}</span>
        </div>
      ))}
    </div>
  )}

  {tags.length > 0 && (
    <div class="badge-row">
      {tags.map(t => (
        <span class="badge">{t}</span>
      ))}
    </div>
  )}

  {link && (
    <a href={link} class="project-link">
      Read case study â†’
    </a>
  )}
</div>

<style>
  .project-card {
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-subtle);
    padding: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    border-color: var(--border-default);
  }

  .project-org {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-title {
    margin: 0 0 1rem;
    font-size: 1.25rem;
    line-height: 1.3;
    color: var(--text-main);
    font-weight: 600;
  }

  .project-desc {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--text-dim);
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .project-metrics {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: var(--bg-alt);
    border-radius: var(--radius-xl);
  }

  .metric-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .metric-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    line-height: 1;
  }

  .metric-label {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .project-link {
    margin-top: auto;
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: opacity 0.2s ease;
  }

  .project-link:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .project-card {
      padding: 1.5rem;
    }

    .project-metrics {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
