---
interface Props {
  title: string;
  description: string;
  benefits: string[];
  icon?: string;
  accentColor?: string;
}

const { title, description, benefits, icon, accentColor = "var(--accent-primary)" } = Astro.props;
---

<div class="service-card">
  {icon && (
    <div class="service-icon" style={`color: ${accentColor}`} aria-hidden="true">
      {icon}
    </div>
  )}
  <h3 class="service-title">{title}</h3>
  <p class="service-description">{description}</p>
  <ul class="service-benefits">
    {benefits.map((benefit) => (
      <li>{benefit}</li>
    ))}
  </ul>
</div>

<style>
  .service-card {
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-subtle);
    padding: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    border-color: var(--border-default);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .service-description {
    font-size: 1rem;
    color: var(--text-dim);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .service-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-benefits li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-dim);
    font-size: 0.95rem;
  }

  .service-benefits li::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .service-card {
      padding: 1.5rem;
    }

    .service-icon {
      font-size: 2.5rem;
    }
  }
</style>

