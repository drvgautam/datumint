---
const { quote, author, role } = Astro.props;
---

<section class="testimonial-strip">
  <div class="wrap" style="
    display:flex;
    flex-direction:column;
    align-items:center;
    gap:1rem;
    text-align:center;
    max-width:900px;">
    <div class="testimonial-quote">
      “{quote}”
    </div>
    <div class="testimonial-role">
      {author} — {role}
    </div>
  </div>
</section>
