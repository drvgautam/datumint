---
interface Props {
  quote: string;
  author: string;
  role: string;
  company?: string;
  photo?: string;
  videoUrl?: string;
}

const { quote, author, role, company, photo, videoUrl } = Astro.props;
---

<div class="testimonial-card">
  {videoUrl ? (
    <div class="testimonial-video">
      <iframe
        src={videoUrl}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        class="video-embed"
      ></iframe>
    </div>
  ) : (
    <div class="testimonial-quote">
      <svg class="quote-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V20c0 1 0 1 1 1z" />
        <path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3c0 1 0 1 1 1z" />
      </svg>
      <p>"{quote}"</p>
    </div>
  )}
  
  <div class="testimonial-author">
    {photo && (
      <img src={photo} alt={author} class="author-photo" />
    )}
    <div class="author-info">
      <div class="author-name">{author}</div>
      <div class="author-role">
        {role}
        {company && <span class="author-company">, {company}</span>}
      </div>
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-subtle);
    padding: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
  }

  .testimonial-quote {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .quote-icon {
    width: 3rem;
    height: 3rem;
    color: var(--accent-primary);
    opacity: 0.3;
    position: absolute;
    top: -0.5rem;
    left: -0.5rem;
  }

  .testimonial-quote p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-main);
    font-style: italic;
    margin: 0;
    padding-left: 2rem;
  }

  .testimonial-video {
    margin-bottom: 1.5rem;
    border-radius: var(--radius-xl);
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .video-embed {
    width: 100%;
    height: 100%;
    border: none;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-photo {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--accent-primary);
  }

  .author-info {
    flex: 1;
  }

  .author-name {
    font-weight: 600;
    color: var(--text-main);
    margin-bottom: 0.25rem;
  }

  .author-role {
    font-size: 0.9rem;
    color: var(--text-dim);
  }

  .author-company {
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .testimonial-card {
      padding: 1.5rem;
    }

    .testimonial-quote p {
      font-size: 1rem;
      padding-left: 1.5rem;
    }
  }
</style>

