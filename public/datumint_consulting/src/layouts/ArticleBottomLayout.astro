    font-size: 1.5rem;
    font-weight: var(--font-semibold);
    color: var(--text-main);
    margin: 2rem 0 0.75rem;
    line-height: 1.3;
  }
  
  .article-body :global(p) {
    margin: 0 0 1.25rem;
  }
  
  .article-body :global(ul),
  .article-body :global(ol) {
    margin: 0 0 1.25rem;
    padding-left: 1.5rem;
  }
  
  .article-body :global(li) {
    margin: 0.5rem 0;
  }
  
  .article-body :global(code) {
    background: var(--bg-elevated);
    padding: 0.2rem 0.4rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    font-family: var(--font-mono);
  }
  
  .article-body :global(pre) {
    background: var(--bg-card);
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border-subtle);
  }
  
  .article-body :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .article-body :global(blockquote) {
    border-left: 3px solid var(--accent-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: var(--text-dim);
    font-style: italic;
  }
  
  .article-body :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .article-body :global(a:hover) {
    color: var(--accent-primary-light);
  }
  
  /* Mobile TOC */
  .toc-mobile {
    margin-bottom: 2rem;
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
  }
  
  .toc-mobile summary {
    padding: 1rem;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: var(--font-medium);
    color: var(--text-main);
  }
  
  .toc-mobile nav {
    padding: 0 1rem 1rem;
  }
  
  .toc-mobile ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc-mobile li {
    margin: 0.5rem 0;
  }
  
  .toc-mobile .toc-depth-3 {
    padding-left: 1rem;
  }
  
  .toc-mobile a {
    display: block;
    padding: 0.5rem 0;
    font-size: 0.875rem;
    color: var(--text-dim);
    text-decoration: none;
  }
  
  .toc-mobile a:hover {
    color: var(--text-main);
  }
  
  /* Desktop TOC */
  .toc-desktop {
    display: none;
  }
  
  @media (min-width: 1024px) {
    .toc-desktop {
      display: block;
    }
  }
  
  .toc-panel {
    position: sticky;
    top: 6rem;
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-xl);
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }
  
  .toc-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    font-weight: var(--font-semibold);
    margin-bottom: 1rem;
  }
  
  .toc-panel ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc-panel li {
    margin: 0.25rem 0;
  }
  
  .toc-indent {
    padding-left: 1rem;
  }
  
  .toc-link {
    display: block;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    border-left: 2px solid transparent;
    border-radius: var(--radius-sm);
