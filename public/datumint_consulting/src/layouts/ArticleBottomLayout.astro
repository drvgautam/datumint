---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

type Props = {
  entry: CollectionEntry<"notes">;
  collection?: string;
}

const { entry, collection = "notes" } = Astro.props;
const { Content, headings } = await entry.render();

// Get next and prev entries
const items = (await getCollection(collection))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const index = items.findIndex(x => x.slug === entry.slug);
const prev = items[(index - 1 + items.length) % items.length];
const next = items[(index + 1) % items.length];

const basePath = import.meta.env.DEV ? "" : "/datumint_consulting";
---

<div class="article-bottom">
  <div class="article-content-wrapper">
    <div class="article-content">
      <article id="article-root" class="article-body">
        {headings && headings.length > 0 && (
          <details class="toc-mobile">
            <summary>Contents</summary>
            <nav>
              <ul>
                {headings
                  .filter((h) => h.depth === 2 || h.depth === 3)
                  .map((h) => (
                    <li class={`toc-depth-${h.depth}`}>
                      <a href={`#${h.slug}`}>{h.text}</a>
                    </li>
                  ))}
              </ul>
            </nav>
          </details>
        )}
        <Content />
      </article>
    </div>
    
    {headings && headings.length > 0 && (
      <aside class="toc-desktop">
        <div class="toc-panel">
          <div class="toc-title">Contents</div>
          <nav id="toc-nav">
            <ul>
              {headings
                .filter((h) => h.depth === 2 || h.depth === 3)
                .map((h) => (
                  <li class={h.depth === 3 ? "toc-indent" : ""}>
                    <a
                      href={`#${h.slug}`}
                      data-toc-id={h.slug}
                      class="toc-link"
                    >
                      {h.text}
                    </a>
                  </li>
                ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}
  </div>
  
  <div class="article-navigation">
    <a href={`${basePath}/notes/${prev.slug}`} class="nav-link nav-prev">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <line x1="19" y1="12" x2="5" y2="12"/>
        <polyline points="12 19 5 12 12 5"/>
      </svg>
      <div class="nav-content">
        <div class="nav-label">Prev</div>
        <div class="nav-title">{prev.data.title}</div>
      </div>
    </a>
    <a href={`${basePath}/notes/${next.slug}`} class="nav-link nav-next">
      <div class="nav-content">
        <div class="nav-label">Next</div>
        <div class="nav-title">{next.data.title}</div>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <line x1="5" y1="12" x2="19" y2="12"/>
        <polyline points="12 5 19 12 12 19"/>
      </svg>
    </a>
  </div>
</div>

<script>
  // TOC highlighting script
  (function() {
    const nav = document.getElementById('toc-nav');
    if (!nav) return;
    
    const links = Array.from(nav.querySelectorAll('a[data-toc-id]'));
    const targets = links
      .map((a) => {
        const id = a.getAttribute('data-toc-id');
        return document.getElementById(id);
      })
      .filter(Boolean);
    
    if (targets.length === 0) return;
    
    const setActive = (id: string) => {
      links.forEach((a) => {
        const isActive = a.getAttribute('data-toc-id') === id;
        if (isActive) {
          a.classList.add('toc-active');
        } else {
          a.classList.remove('toc-active');
        }
      });
    };
    
    const HEADER_OFFSET = 80;
    const observer = new IntersectionObserver(() => {
      const candidates = targets.map((el) => ({ 
        id: el.id, 
        top: el.getBoundingClientRect().top - HEADER_OFFSET 
      }));
      let best = candidates[0];
      for (const c of candidates) {
        if (Math.abs(c.top) < Math.abs(best.top)) best = c;
      }
      if (best) setActive(best.id);
    }, { rootMargin: '-10% 0px -80% 0px', threshold: [0, 0.25, 0.5, 0.75, 1] });
    
    targets.forEach((el) => observer.observe(el));
    
    const firstVisible = targets.find(el => {
      const rect = el.getBoundingClientRect();
      return rect.top >= 0 && rect.top < window.innerHeight * 0.5;
    });
    if (firstVisible) {
      setActive(firstVisible.id);
    } else if (targets[0]) {
      setActive(targets[0].id);
    }
  })();
</script>

<style>
  .article-bottom {
    max-width: 1280px;
    margin: 0 auto;
  }
  
  .article-content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
