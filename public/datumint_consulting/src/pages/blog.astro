---
import BaseLayout from "../layouts/BaseLayout.astro";

import { getCollection } from "astro:content";

// Get all blog posts from content collection
const posts = await getCollection("notes");
const postList = posts
  .filter(post => !post.data.draft)
  .map((post) => ({
    title: post.data.title,
    summary: post.data.summary,
    date: post.data.date,
    tags: post.data.tags,
    slug: post.slug,
    href: import.meta.env.DEV 
      ? `/notes/${post.slug}` 
      : `/datumint_consulting/notes/${post.slug}`,
    body: post.body,
  }))
  .sort((a, b) => b.date.getTime() - a.date.getTime());

// Calculate reading time
function readingTime(html: string): string {
  const textOnly = html.replace(/<[^>]+>/g, "");
  const wordCount = textOnly.split(/\s+/).length;
  const readingTimeMinutes = Math.ceil(wordCount / 200);
  return `${readingTimeMinutes} min`;
}

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", { 
    year: "numeric", 
    month: "short", 
    day: "numeric" 
  });
}
---

<BaseLayout
  title="Blog â€” DatumInt"
  description="Thoughts on semantic data engineering, FAIR data, and GenAI with context."
>
  <section class="section">
    <div class="wrap" style="max-width:800px;">
      <h1>Blog</h1>
      <p>
        Short, practical notes on semantic data engineering, FAIR data
        pipelines, and GenAI with context. No fluff.
      </p>

      <div class="blog-grid">
        {postList.map(p => {
          const readingTimeStr = p.body 
            ? readingTime(p.body) 
            : "5 min";
          
          return (
            <article class="blog-card">
              <a href={p.href} class="blog-link">
                <h2 class="blog-title">{p.title}</h2>
              </a>
              <p class="blog-summary">{p.summary}</p>

              <div class="blog-meta">
                <div class="blog-tags">
                  {p.tags.map((t: string) => (
                    <span class="badge">{t}</span>
                  ))}
                </div>
                <div class="blog-meta-right">
                  <span class="blog-date">{formatDate(p.date)}</span>
                  <span class="blog-reading-time">{readingTimeStr}</span>
                </div>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-grid {
    display: grid;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .blog-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-xl);
    padding: 2rem;
    transition: all 0.2s ease;
  }
  
  .blog-card:hover {
    border-color: var(--border-default);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }
  
  .blog-link {
    text-decoration: none;
    color: var(--text-main);
    display: block;
  }
  
  .blog-title {
    font-size: 1.5rem;
    font-weight: var(--font-semibold);
    line-height: 1.3;
    color: var(--text-main);
    margin: 0 0 0.75rem;
    transition: color 0.2s ease;
  }
  
  .blog-card:hover .blog-title {
    color: var(--accent-primary);
  }
  
  .blog-summary {
    font-size: 1rem;
    color: var(--text-dim);
    line-height: 1.6;
    margin: 0 0 1.5rem;
  }
  
  .blog-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }
  
  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .blog-meta-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .blog-date {
    color: var(--text-muted);
  }
  
  .blog-reading-time {
    color: var(--text-muted);
  }
  
  @media (max-width: 768px) {
    .blog-card {
      padding: 1.5rem;
    }
    
    .blog-title {
      font-size: 1.25rem;
    }
    
    .blog-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
