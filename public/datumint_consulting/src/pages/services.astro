---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    title: "Semantic Data Engineering",
    description: "We capture your core domain knowledge ‚Äî assets, processes, regulations, measurements ‚Äî into a shared ontology and knowledge graph. Your knowledge stops living in PDFs and scattered Excel sheets.",
    benefits: [
      "Knowledge graph design & implementation",
      "Ontology development & modeling",
      "Data integration & mapping",
      "Open standards compliance (RDF, OWL, SHACL)"
    ],
    icon: "üîó",
    accentColor: "var(--accent-secondary)"
  },
  {
    title: "FAIR Data Pipelines",
    description: "We build ingestion and curation pipelines with traceability, metadata, and lineage. Your data becomes Findable, Accessible, Interoperable, and Reusable.",
    benefits: [
      "Metadata management systems",
      "Full data lineage tracking",
      "Governance frameworks",
      "Production-grade observability"
    ],
    icon: "‚öôÔ∏è",
    accentColor: "var(--accent-primary)"
  },
  {
    title: "GenAI with Context",
    description: "We deliver retrieval-augmented assistants that answer with citations from your approved sources, not guesses. This is AI you can show to auditors and management.",
    benefits: [
      "RAG (Retrieval-Augmented Generation) implementation",
      "Citation & source tracking",
      "Knowledge retrieval systems",
      "Governed AI responses"
    ],
    icon: "ü§ñ",
    accentColor: "var(--accent-tertiary)"
  },
  {
    title: "Cloud-Native Delivery",
    description: "We ship the solution using containers, CI/CD, and observability so you can run it yourself (Kubernetes-friendly, vendor-light).",
    benefits: [
      "Containerized deployments",
      "CI/CD pipeline setup",
      "Observability & monitoring",
      "Documentation & handoff"
    ],
    icon: "‚òÅÔ∏è",
    accentColor: "var(--accent-primary)"
  },
];

const engagementModels = [
  {
    title: "Project-Based",
    description: "Fixed scope and timeline for specific deliverables. Ideal for well-defined projects with clear requirements.",
    duration: "8-12 weeks typical",
    deliverables: ["Complete system", "Documentation", "Training", "30-day support"]
  },
  {
    title: "Retainer",
    description: "Ongoing support and development. Perfect for evolving needs and continuous improvement.",
    duration: "Monthly engagement",
    deliverables: ["Ongoing development", "Support & maintenance", "Strategic guidance", "Priority response"]
  },
  {
    title: "Advisory",
    description: "Strategic guidance and architecture review. Best for teams building in-house with expert oversight.",
    duration: "Flexible",
    deliverables: ["Architecture reviews", "Best practices guidance", "Technical consulting", "Code reviews"]
  },
];
---

<BaseLayout
  title="Services ‚Äî DatumInt"
  description="Semantic data platforms, FAIR pipelines, and GenAI with context."
>
  <!-- PAGE HERO -->
  <section class="section" style="padding-top:3rem;">
    <div class="wrap" style="max-width:800px;text-align:center;">
      <h1 style="font-size:clamp(2rem,4vw,3rem);margin-bottom:1.5rem;">
        Services
      </h1>
      <p style="font-size:1.25rem;color:var(--text-dim);line-height:1.6;">
        We help you go from "we have messy data everywhere" to
        "we have a governed semantic platform our AI can trust."
      </p>
    </div>
  </section>

  <!-- SERVICES -->
  <section class="section-alt">
    <div class="wrap">
      <div style="text-align:center;margin-bottom:3rem;">
        <h2 style="color:var(--accent-primary);margin-bottom:.5rem;font-size:0.9rem;text-transform:uppercase;letter-spacing:0.1em;">
          What We Offer
        </h2>
        <h3 style="font-size:2rem;line-height:1.2;">
          Complete Semantic Data Solutions
        </h3>
      </div>

      <div class="services-grid">
        {services.map((service) => (
          <ServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- ENGAGEMENT MODELS -->
  <section class="section">
    <div class="wrap">
      <div style="text-align:center;margin-bottom:3rem;">
        <h2 style="color:var(--accent-primary);margin-bottom:.5rem;font-size:0.9rem;text-transform:uppercase;letter-spacing:0.1em;">
          How We Work
        </h2>
        <h3 style="font-size:2rem;line-height:1.2;margin-bottom:1rem;">
          Engagement Models
        </h3>
        <p style="color:var(--text-dim);max-width:60ch;margin:0 auto;">
          Choose the engagement model that fits your needs and timeline.
        </p>
      </div>

      <div class="engagement-grid">
        {engagementModels.map((model) => (
          <div class="engagement-card">
            <h4 class="engagement-title">{model.title}</h4>
            <p class="engagement-description">{model.description}</p>
            <div class="engagement-duration">{model.duration}</div>
            <ul class="engagement-deliverables">
              {model.deliverables.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section-alt">
    <div class="wrap" style="max-width:800px;">
      <h2 style="text-align:center;margin-bottom:3rem;font-size:2rem;">
        Frequently Asked Questions
      </h2>

      <div class="faq-list">
        <div class="faq-item">
          <h3 class="faq-question">How long does a typical project take?</h3>
          <p class="faq-answer">
            Most projects range from 8-12 weeks from kickoff to deployment. This includes discovery, design, development, testing, and handoff phases.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">What technologies do you use?</h3>
          <p class="faq-answer">
            We use open standards (RDF, OWL, SHACL) and modern tools (Python, Kubernetes, cloud-native services). We avoid vendor lock-in and ensure you own your knowledge graph.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">Do you provide ongoing support?</h3>
          <p class="faq-answer">
            Yes. All projects include 30 days of post-launch support. We also offer retainer agreements for ongoing development and maintenance.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">Can you work with our existing data infrastructure?</h3>
          <p class="faq-answer">
            Absolutely. We integrate with your existing systems, databases, and data sources. Our pipelines are designed to work alongside your current infrastructure.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">What's included in the handoff?</h3>
          <p class="faq-answer">
            Complete documentation, source code, deployment guides, team training sessions, and access to all project artifacts. You own everything.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="wrap" style="text-align:center;">
      <h2 style="font-size:2rem;margin-bottom:1rem;">
        Ready to Get Started?
      </h2>
      <p style="color:var(--text-dim);margin-bottom:2rem;max-width:60ch;margin-left:auto;margin-right:auto;">
        Let's discuss your project and see how we can help transform your data into a semantic knowledge platform.
      </p>
      <div class="btn-row" style="justify-content:center;">
        <a href="/contact" class="btn-solid" style="text-decoration:none;">
          Book a Discovery Call
        </a>
        <a href="/projects" class="btn-ghost" style="text-decoration:none;">
          See Examples
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .engagement-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .engagement-card {
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(243,231,217,0.12);
    padding: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .engagement-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
  }

  .engagement-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .engagement-description {
    color: var(--text-dim);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .engagement-duration {
    font-size: 0.9rem;
    color: var(--accent-primary);
    font-weight: 600;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(243,231,217,0.1);
  }

  .engagement-deliverables {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .engagement-deliverables li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-dim);
    font-size: 0.95rem;
  }

  .engagement-deliverables li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: 600;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .faq-item {
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(243,231,217,0.1);
  }

  .faq-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .faq-question {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .faq-answer {
    color: var(--text-dim);
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .services-grid,
    .engagement-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
