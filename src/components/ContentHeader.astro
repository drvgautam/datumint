---
import { SITE } from "@consts"
import { cn } from "@lib/utils"
const { pathname } = Astro.url
const subpath = pathname.match(/[^/]+/g)
---

<header class="sticky top-0 z-30 bg-white/95 dark:bg-black/95 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800 ml-64">
  <div class="max-w-[720px] mx-auto px-4 py-3 flex justify-end items-center gap-2">
    <a 
      href="/search" 
      aria-label={`Search blog posts and projects on ${SITE.TITLE}`} 
      class={cn(
        "size-9 rounded-lg p-2 flex items-center justify-center",
        "transition-colors duration-200 ease-in-out",
        pathname === "/search" || "/" + subpath?.[0] === "search" 
          ? "bg-black dark:bg-white text-white dark:text-black" 
          : "bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-black dark:hover:text-white"
      )}
    >
      <svg class="w-5 h-5" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24">
        <use href="/ui.svg#search"></use>
      </svg>
    </a>

    <button 
      id="content-header-theme-button" 
      aria-label="Toggle light and dark theme" 
      class="size-9 rounded-lg p-2 flex items-center justify-center bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 hover:text-black dark:hover:text-white transition-colors duration-200 ease-in-out"
    >
      <svg class="w-5 h-5 block dark:hidden" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24">
        <use href="/ui.svg#sun"></use>
      </svg>
      <svg class="w-5 h-5 hidden dark:block" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24">
        <use href="/ui.svg#moon"></use>
      </svg>
    </button>
  </div>
</header>

