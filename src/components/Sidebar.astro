---
import { SITE, LINKS, SOCIALS, BUY_ME_COFFEE_URL } from "@consts"
import { cn } from "@lib/utils"
const { pathname } = Astro.url
const subpath = pathname.match(/[^/]+/g)
const coffeeUrl = BUY_ME_COFFEE_URL || "https://buymeacoffee.com"
---

<aside class="hidden lg:flex fixed left-0 top-0 h-full w-64 bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 flex-col z-40">
  <!-- Logo Section -->
  <div class="pt-16 pb-6 px-6 border-b border-gray-200 dark:border-gray-800">
    <div class="w-full flex items-center justify-center mb-3">
      <img
        src="/profile.png"
        alt="Vinay Gautam"
        width="120"
        height="120"
        loading="eager"
        decoding="async"
        class="w-20 h-20 md:w-24 md:h-24 rounded-full object-cover shadow-md ring-1 ring-black/10 dark:ring-white/10"
      />
    </div>
    <a href="/" class="group block" aria-label="Home">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 group-hover:text-black group-hover:dark:text-white transition-colors duration-200 tracking-tight">
        Vinay Gautam
      </h1>
    </a>
    <p class="mt-3 text-[11px] md:text-xs font-semibold text-gray-900 dark:text-white bg-gray-50 dark:bg-gray-900/60 border border-gray-200 dark:border-gray-800 rounded-lg px-3 py-2 leading-relaxed">
      Topics: Linux | DevOps | Self-hosted Homelab | Semantic Data Engineering | LLMs &amp; GenAI with context | datumint consulting.
    </p>
  </div>

  <!-- Navigation Links -->
  <nav class="flex-1 px-4 py-6 space-y-2">
    {
      LINKS.map((LINK) => {
        const isDatumint = LINK.TEXT?.toLowerCase?.() === "datumint"
        const isExternal = LINK.HREF.startsWith("http") || isDatumint
        const isActive = !isExternal && (pathname === LINK.HREF || "/" + subpath?.[0] === LINK.HREF)
        return (
          <>
          {isDatumint && (
            <a
              href="/Homelab"
              target="_blank"
              rel="noopener noreferrer"
              class="block px-4 py-3 rounded-lg text-base font-medium outline-none transition-colors duration-200 ease-in-out focus-visible:ring-2 focus-visible:ring-blue-500/40 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-black dark:hover:text-white"
              aria-label="homelab (external)"
            >
              <span class="flex items-center gap-2">
                <svg
                  class="w-4 h-4"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <rect x="3" y="4" width="18" height="6" rx="1" />
                  <rect x="3" y="14" width="18" height="6" rx="1" />
                  <path d="M7 7h.01M11 7h.01M7 17h.01M11 17h.01" />
                </svg>
                <span>Homelab</span>
                <svg
                  class="w-4 h-4 opacity-70 group-hover:opacity-100"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <path d="M15 3h6v6" />
                  <path d="M10 14L21 3" />
                </svg>
              </span>
            </a>
          )}
          <a 
            href={LINK.HREF}
            target={isExternal ? "_blank" : undefined}
            rel={isExternal ? "noopener noreferrer" : undefined}
            aria-current={isActive ? "page" : undefined}
            class={cn(
              "block px-4 py-3 rounded-lg text-base font-medium outline-none",
              "transition-colors duration-200 ease-in-out focus-visible:ring-2 focus-visible:ring-blue-500/40",
              isActive
                ? "bg-black dark:bg-white text-white dark:text-black"
                : "text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-black dark:hover:text-white"
            )}
          >
            {
              isDatumint
                ? (
                  <span class="flex items-center gap-2">
                    <span class="inline-flex items-center gap-1">
                      <span class="blink-star text-amber-500">✦</span>
                      <span>DatumInt</span>
                    </span>
                    <svg
                      class="w-4 h-4 opacity-70 group-hover:opacity-100"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <path d="M15 3h6v6" />
                      <path d="M10 14L21 3" />
                    </svg>
                  </span>
                )
                : LINK.TEXT
            }
          </a>
          </>
        )
      })
    }
  </nav>

  <!-- Social Icons -->
  <div class="px-4 pt-2 pb-4 border-t border-gray-200 dark:border-gray-800">
    <!-- Buy Me Coffee Button - Set BUY_ME_COFFEE_URL in consts.ts -->
    <a
      href={coffeeUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="mb-3 block w-full rounded-lg border border-amber-300 bg-amber-400 text-black text-center font-semibold py-2 hover:brightness-95 transition"
      aria-label="Buy me a coffee"
    >
      ☕ Buy me a coffee
    </a>
    <div class="flex flex-wrap gap-2 justify-center">
      {SOCIALS.map((SOCIAL) => (
        <a
          href={SOCIAL.HREF}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
          class="group size-9 rounded-lg p-2 flex items-center justify-center bg-gray-100 dark:bg-gray-800 hover:bg-black dark:hover:bg-white transition-colors"
        >
          <svg class="size-full fill-current text-gray-700 dark:text-gray-300 group-hover:fill-black group-hover:dark:fill-white">
            <use href={`/social.svg#${SOCIAL.ICON}`} />
          </svg>
        </a>
      ))}
      <a
        href="/rss.xml"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="RSS feed"
        class="group size-9 rounded-lg p-2 flex items-center justify-center bg-gray-100 dark:bg-gray-800 hover:bg-black dark:hover:bg-white transition-colors"
      >
        <svg class="size-full fill-current text-gray-700 dark:text-gray-300 group-hover:fill-black group-hover:dark:fill-white" stroke="currentColor">
          <use href="/ui.svg#rss" />
        </svg>
      </a>
    </div>
  </div>
</aside>

<style>
  .blink-star {
    animation: starBlink 1.2s ease-in-out infinite alternate;
    display: inline-block;
    transform-origin: center;
  }
  @keyframes starBlink {
    0% { opacity: .5; transform: scale(1); }
    100% { opacity: 1; transform: scale(1.2); }
  }
</style>


